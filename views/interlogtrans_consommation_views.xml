<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_interlogtrans_consommation_tree" model="ir.ui.view">
        <field name="name">interlogtrans.consommation.tree</field>
        <field name="model">interlogtrans.consommation</field>
        <field name="arch" type="xml">
            <tree decoration-danger="consommation &gt; 0">
                <field name="date"/>
                <field name="vehicle_id"/>
                <field name="compteur"/>
                <field name="article"/>
                <field name="kilometrage"/>
                <field name="quantite"/>
                <field name="prix_par_litre"/>
                <field name="amount"/>
                <field name="distance_parcourue"/>
                <field name="consommation"/>
            </tree>
        </field>
    </record>

    <record id="view_interlogtrans_consommation_form" model="ir.ui.view">
        <field name="name">interlogtrans.consommation.form</field>
        <field name="model">interlogtrans.consommation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Informations Générales">
                            <field name="date"/>
                            <field name="vehicle_id"/>
                            <field name="compteur"/>
                            <field name="article"/>
                        </group>
                        <group string="Kilométrage">
                            <field name="kilometrage"/>
                            <field name="kilometrage_precedent"/>
                            <field name="distance_parcourue" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Carburant">
                            <field name="quantite"/>
                            <field name="prix_par_litre"/>
                            <field name="amount"/>
                        </group>
                        <group string="Consommation">
                            <field name="consommation" readonly="1" style="font-size: 20px; font-weight: bold; color: red;"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Notes..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_interlogtrans_consommation_search" model="ir.ui.view">
        <field name="name">interlogtrans.consommation.search</field>
        <field name="model">interlogtrans.consommation</field>
        <field name="arch" type="xml">
            <search>
                <field name="vehicle_id"/>
                <field name="compteur"/>
                <field name="article"/>
                <filter string="Avec Consommation" name="has_consommation" domain="[('consommation', '&gt;', 0)]"/>
                <filter string="GASOIL" name="gasoil" domain="[('article', '=', 'gasoil')]"/>
                <filter string="ADBLUE" name="adblue" domain="[('article', '=', 'adblue')]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter string="Véhicule" name="group_vehicle" context="{'group_by': 'vehicle_id'}"/>
                    <filter string="Carburant" name="group_article" context="{'group_by': 'article'}"/>
                    <filter string="Station" name="group_station" context="{'group_by': 'compteur'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_interlogtrans_consommation" model="ir.actions.act_window">
        <field name="name">Consommation Carburant</field>
        <field name="res_model">interlogtrans.consommation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_vehicle': 1, 'search_default_has_consommation': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un relevé de consommation
            </p>
        </field>
    </record>

    <menuitem id="menu_interlogtrans_consommation"
              name="Consommation Carburant"
              parent="fleet.fleet_vehicles"
              action="action_interlogtrans_consommation"
              sequence="15"/>

</odoo>
