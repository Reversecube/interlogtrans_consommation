<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_consommation_tree" model="ir.ui.view">
        <field name="name">interlogtrans.consommation.tree</field>
        <field name="model">interlogtrans.consommation</field>
        <field name="arch" type="xml">
            <tree decoration-danger="consommation &gt; 0">
                <field name="name"/>
                <field name="date"/>
                <field name="vehicle_id"/>
                <field name="quantite"/>
                <field name="consommation"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_consommation_form" model="ir.ui.view">
        <field name="name">interlogtrans.consommation.form</field>
        <field name="model">interlogtrans.consommation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_done" string="Terminer" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="vehicle_id"/>
                            <field name="driver_id"/>
                        </group>
                        <group>
                            <field name="kilometrage"/>
                            <field name="kilometrage_precedent"/>
                            <field name="distance_parcourue"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="compteur"/>
                            <field name="article"/>
                            <field name="quantite"/>
                        </group>
                        <group>
                            <field name="prix_par_litre"/>
                            <field name="prix_total"/>
                            <field name="consommation"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_consommation_search" model="ir.ui.view">
        <field name="name">interlogtrans.consommation.search</field>
        <field name="model">interlogtrans.consommation</field>
        <field name="arch" type="xml">
            <search>
                <field name="vehicle_id"/>
                <filter string="Avec Consommation" name="has_consommation" domain="[('consommation', '&gt;', 0)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="VÃ©hicule" name="group_vehicle" context="{'group_by': 'vehicle_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_consommation" model="ir.actions.act_window">
        <field name="name">Consommation</field>
        <field name="res_model">interlogtrans.consommation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_vehicle': 1}</field>
    </record>

    <menuitem id="menu_interlogtrans" name="Interlog Trans" sequence="10"/>
    <menuitem id="menu_consommation" name="Consommation" parent="menu_interlogtrans" action="action_consommation"/>

</odoo>
