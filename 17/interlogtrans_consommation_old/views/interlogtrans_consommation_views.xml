<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_interlogtrans_consommation_tree" model="ir.ui.view">
        <field name="name">interlogtrans.consommation.tree</field>
        <field name="model">interlogtrans.consommation</field>
        <field name="arch" type="xml">
            <tree string="Consommation Carburant" decoration-danger="consommation &gt; 15" decoration-success="consommation &lt; 10">
                <field name="date"/>
                <field name="vehicle_id"/>
                <field name="compteur"/>
                <field name="article"/>
                <field name="kilometrage"/>
                <field name="kilometrage_precedent"/>
                <field name="distance_parcourue"/>
                <field name="quantite"/>
                <field name="prix_par_litre"/>
                <field name="amount" widget="monetary"/>
                <field name="consommation" decoration-bf="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_interlogtrans_consommation_form" model="ir.ui.view">
        <field name="name">interlogtrans.consommation.form</field>
        <field name="model">interlogtrans.consommation</field>
        <field name="arch" type="xml">
            <form string="Consommation de Carburant">
                <sheet>
                    <group>
                        <group string="Informations Générales">
                            <field name="date"/>
                            <field name="vehicle_id" options="{'no_create': True}"/>
                            <field name="compteur" placeholder="Nom de la station..."/>
                            <field name="article"/>
                        </group>
                        <group string="Kilométrage">
                            <field name="kilometrage"/>
                            <field name="kilometrage_precedent"/>
                            <field name="distance_parcourue" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    
                    <group string="Détails du Carburant">
                        <group>
                            <field name="quantite"/>
                            <field name="prix_par_litre"/>
                        </group>
                        <group>
                            <field name="amount" widget="monetary" readonly="1" force_save="1"/>
                            <field name="consommation" readonly="1" force_save="1" 
                                   class="oe_bold" style="font-size: 16px; color: #875A7B;"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="description" placeholder="Notes et observations..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_interlogtrans_consommation_search" model="ir.ui.view">
        <field name="name">interlogtrans.consommation.search</field>
        <field name="model">interlogtrans.consommation</field>
        <field name="arch" type="xml">
            <search string="Rechercher">
                <field name="vehicle_id"/>
                <field name="compteur"/>
                <field name="article"/>
                <field name="date"/>
                
                <filter string="Haute Consommation" name="filter_high_consumption" 
                        domain="[('consommation', '&gt;', 15)]"/>
                <filter string="Basse Consommation" name="filter_low_consumption" 
                        domain="[('consommation', '&lt;', 10)]"/>
                <separator/>
                <filter string="Ce Mois" name="filter_this_month" 
                        domain="[('date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter string="Véhicule" name="group_vehicle" context="{'group_by': 'vehicle_id'}"/>
                    <filter string="Type Carburant" name="group_article" context="{'group_by': 'article'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date:month'}"/>
                    <filter string="Station" name="group_compteur" context="{'group_by': 'compteur'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Window Action -->
    <record id="action_interlogtrans_consommation" model="ir.actions.act_window">
        <field name="name">Consommation Carburant</field>
        <field name="res_model">interlogtrans.consommation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_vehicle': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau relevé de consommation
            </p>
            <p>
                Enregistrez la consommation de carburant de vos véhicules et suivez leur performance.
            </p>
        </field>
    </record>

    <!-- Main Menu -->
    <menuitem id="menu_interlogtrans_consommation"
              name="Consommation Carburant"
              parent="fleet.fleet_menu_root"
              action="action_interlogtrans_consommation"
              sequence="50"/>

</odoo>
